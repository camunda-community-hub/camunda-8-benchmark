<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress verbose job activation and streaming failure logs -->
    <logger name="io.camunda.zeebe.client.job.poller" level="ERROR" />
    <logger name="io.camunda.zeebe.client.job.worker" level="ERROR" />
    
    <!-- Suppress gRPC connection and deadline exceeded errors -->
    <logger name="io.grpc" level="ERROR" />
    <logger name="io.netty" level="ERROR" />
    
    <!-- Suppress general Zeebe client connection issues -->
    <logger name="io.camunda.zeebe.client" level="ERROR" />

    <logger name="javax.activation" level="info" />
    <logger name="org.springframework" level="info" />
    <logger name="org.camunda" level="info" />
    <!--
      <logger name="org.camunda" level="DEBUG"/>
    -->

    <logger name="io.camunda.zeebe.spring.client.jobhandling.DefaultCommandExceptionHandlingStrategy" level="ERROR" />


    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
